{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "jupyterapp",
        "annotations": {
            "description": "Jupyter Notebook App",
            "tags": "jupyter-app"
        }
    },
    "objects": [
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "appid": "jupyter-app-${APPLICATION_NAME}"
                }
            },
            "spec": {
                "tags": [
                    {
                        "name": "latest",
                        "from": {
                            "kind": "DockerImage",
                            "name": "${JUPYTER_NOTEBOOK_IMAGE}"
                        }
                    }
                ]
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "appid": "jupyter-app-${APPLICATION_NAME}"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Rolling"
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "${APPLICATION_NAME}"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${APPLICATION_NAME}:latest"
                            }
                        }
                    }
                ],
                "replicas": 1,
                "selector": {
                    "deploymentconfig": "${APPLICATION_NAME}"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "appid": "jupyter-app-${APPLICATION_NAME}",
                            "deploymentconfig": "${APPLICATION_NAME}"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "${APPLICATION_NAME}",
                                 "env": [
                                        {
                                            "name": "JUPYTER_NOTEBOOK_PASSWORD",
                                            "value": "${JUPYTER_NOTEBOOK_PASSWORD}"
                                        },
                                        {
                                            "name": "JUPYTERLAB",
                                            "value": "${JUPYTERLAB}"
                                        }
                                ],
                                "image": "${APPLICATION_NAME}:latest",
                                "ports": [
                                    {
                                        "containerPort": 8888,
                                        "protocol": "TCP"
                                    }
                                ]
                            }
                        ]
                    }
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "appid": "jupyter-app-${APPLICATION_NAME}"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "8888-tcp",
                        "protocol": "TCP",
                        "port": 8888,
                        "targetPort": 8888
                    }
                ],
                "selector": {
                    "deploymentconfig": "${APPLICATION_NAME}"
                }
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "appid": "jupyter-app-${APPLICATION_NAME}"
                }
            },
            "spec": {
                "host": "",
                "to": {
                    "kind": "Service",
                    "name": "${APPLICATION_NAME}",
                    "weight": 100
                },
                "port": {
                    "targetPort": "8888-tcp"
                }
            }
        }
    ],
    "parameters": [
        {
            "name": "APPLICATION_NAME",
            "description": "The name of the application.",
            "value": "jupyter-app",
            "from": "[a-zA-Z0-9]{10}",
            "required": true
        },
        {
            "name": "JUPYTER_NOTEBOOK_PASSWORD",
            "description": "password for jupyter notebook",
            "value": "password",
            "from": "[a-zA-Z0-9]{10}",
            "required": true
        },
        {
            "name": "JUPYTER_NOTEBOOK_IMAGE",
            "description": "jupyter notebook image",
            "value": "radanalyticsio/jupyter-notebook-py3.5",
            "from": "[a-zA-Z0-9]{10}",
            "required": true
        },
        {
            "name": "JUPYTERLAB",
            "description": "enable jupyter lab UI",
            "value": "false",
            "required": true
        }
    ]
}
